{
    "name": "connect-with-gamers",
    "version": "1.0.0",
    "description": "Connect With Gamers",
    "author": "Shawn Andrews",
    "license": "MIT",
    "scripts": {
        "server-client": "npm run build-ts && npm run tslint && npm run client-prod --prefix client/ && npm run server",
        "server-prod": "npm run build-ts && npm run tslint",
        "server": "node dist/server.js",
        "chat-server": "node dist/chatserver.js",
        "build-ts": "tsc",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "test": "mocha --exit -r ts-node/register **/*.spec.ts  --timeout 5000",
        "test-with-coverage": "nyc mocha --exit --timeout 5000 --opts ./mocha.opts",
        "test-with-coverage-to-codecov": "nyc mocha --exit --timeout 5000 --opts ./mocha.opts > coverage.lcov && codecov -t f2186ac4-edde-43bc-8a83-80c089a32d6b"
    },
    "dependencies": {
        "@types/express": "^4.16.0",
        "@types/mysql": "^2.15.5",
        "@types/redis": "^2.8.10",
        "@types/socket.io": "^2.1.2",
        "axios": "^0.18.0",
        "bcryptjs": "^2.4.3",
        "blocked": "^1.2.1",
        "body-parser": "^1.18.3",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "cluster": "^0.7.7",
        "cookie-parser": "^1.4.3",
        "express": "^4.16.4",
        "express-force-ssl": "^0.3.2",
        "express-rate-limit": "^3.3.2",
        "express-session": "^1.15.6",
        "https": "^1.0.0",
        "imgur": "^0.3.1",
        "mobile-detect": "^1.4.3",
        "mocha": "^5.2.0",
        "mysql": "^2.16.0",
        "nodemailer": "^5.0.0",
        "redis": "^2.8.0",
        "socket.io": "^2.2.0",
        "web-request": "^1.0.7",
        "ytdl-core": "^0.29.1"
    },
    "devDependencies": {
        "codecov": "^3.1.0",
        "nyc": "^13.1.0",
        "ts-node": "^7.0.1",
        "tslint": "^5.12.0",
        "typescript": "^3.2.2"
    },
    "nyc": {
        "include": [
            "**/*.spec.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "text-summary",
            "lcov"
        ],
        "instrument": true
    }
}
